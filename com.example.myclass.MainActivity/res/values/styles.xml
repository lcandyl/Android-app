<resources>
<style name="show_tv1">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item> 
        <item name="android:background">@drawable/show_tv_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:layout_marginLeft">1.5dp</item>     
    </style>
    <style name="show_tv2">
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:background">@drawable/show_tv_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>  
        <item name="android:gravity">center</item> 
        <item name="android:layout_marginRight">1.5dp</item>      
    </style>
    <style name="show_tv3">
        <item name="android:textSize">18dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/show_tv_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:gravity">center</item> 
        <item name="android:layout_marginRight">1.5dp</item>             
    </style>
    <style name="R_tittle_tv">
              <item name="android:layout_width">fill_parent</item>     
              <item name="android:layout_height">wrap_content</item>
              <item name="android:gravity">center_horizontal</item>
              <item name="android:layout_alignParentTop">true</item>
              <item name="android:layout_marginTop">10dp</item>
              <item name="android:textSize">25dp</item>
              <item name="android:textStyle">bold</item>   
              <item name="android:textColor">@color/white</item>
              <item name="android:padding">2dip</item>
              <item name="android:shadowRadius">5</item>
              <item name="android:shadowColor">@color/black</item> 
    </style>
     <style name="scheduleInsert_tv1">
        <item name="android:textSize">15dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:gravity">center</item> 
        <item name="android:background">@drawable/show_tv_background</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:layout_marginLeft">1.5dp</item>     
    </style>
    <style name="scheduleInsert_et2">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/show_tv_background</item>
        <item name="android:layout_margin">0.5dp</item>  
        <item name="android:gravity">center</item> 
        <item name="android:layout_marginRight">1.5dp</item>           
    </style>
    <style name="scheduleInsert_et3">
        <item name="android:textSize">13dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@drawable/show_tv_background</item>      
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:gravity">center</item> 
        <item name="android:layout_marginRight">1.5dp</item>               
    </style>
     <style name="Animation">
    	<item name="android:activityOpenEnterAnimation">@anim/translucent_enter</item>  
        <item name="android:activityOpenExitAnimation">@anim/translucent_exit</item>  
        <item name="android:activityCloseEnterAnimation">@anim/translucent_enter</item>  
        <item name="android:activityCloseExitAnimation">@anim/translucent_exit</item>  
    </style>
    <style name="AnimationTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>

</resources>